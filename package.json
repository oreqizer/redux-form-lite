{
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run tslint",
    "tslint": "tslint -e '**/lib/**' 'packages/**/*.{ts,tsx}'",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:lib": "gulp",
    "build:umd": "webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:build": "rm -rf packages/*/lib",
    "clean:deps": "rm -rf node_modules packages/*/node_modules",
    "bootstrap": "npm run clean && yarn && lerna bootstrap && npm run build:lib",
    "release": "npm run clean:build && npm run build && npm test && npm run lint && lerna publish"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".tsx?": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "raf/polyfill",
      "./etc/enzymeSetup"
    ],
    "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/redux-forms.git"
  },
  "author": "oreqizer",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "~21.1.5",
    "@types/ramda": "~0.24.18",
    "@types/react-redux": "~5.0.11",
    "@types/redux": "~3.6.0",
    "babel-cli": "~6.26.0",
    "babel-jest": "~21.2.0",
    "babel-loader": "~7.1.2",
    "babel-plugin-ramda": "~1.4.3",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-3": "~6.24.1",
    "chalk": "~2.3.0",
    "cross-env": "~5.1.0",
    "enzyme": "~3.1.0",
    "enzyme-adapter-react-16": "~1.0.2",
    "gulp": "~3.9.1",
    "gulp-babel": "~7.0.0",
    "gulp-plumber": "~1.1.0",
    "gulp-typescript": "~3.2.3",
    "gulp-util": "~3.0.8",
    "jest": "~21.2.1",
    "lerna": "2.4.0",
    "prop-types": "~15.6.0",
    "raf": "~3.4.0",
    "ramda": "~0.25.0",
    "react": "~16.0.0",
    "react-dom": "~16.0.0",
    "react-redux": "~5.0.6",
    "redux": "~3.7.2",
    "rimraf": "~2.6.2",
    "through2": "~2.0.3",
    "ts-jest": "~21.1.3",
    "ts-loader": "~3.1.0",
    "tslint": "~5.8.0",
    "tslint-react": "~3.2.0",
    "typescript": "~2.5.3",
    "webpack": "~3.8.1"
  }
}

{
  "private": true,
  "scripts": {
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run tslint",
    "tslint": "tslint -e '**/lib/**' 'packages/**/*.{ts,tsx}'",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:lib": "gulp",
    "build:umd": "webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:build": "rm -rf packages/*/lib",
    "clean:deps": "rm -rf node_modules packages/*/node_modules",
    "bootstrap": "npm run clean && yarn && lerna bootstrap && npm run build:lib",
    "release": "npm run clean:build && npm run build && npm test && npm run lint && lerna publish"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".tsx?": "<rootDir>/jest-preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/redux-forms.git"
  },
  "author": "oreqizer",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "~2.8.7",
    "@types/jest": "~20.0.8",
    "@types/ramda": "0.24.11",
    "@types/react-redux": "~5.0.7",
    "@types/redux": "~3.6.0",
    "babel-cli": "~6.26.0",
    "babel-jest": "~21.0.0",
    "babel-loader": "~7.1.2",
    "babel-plugin-ramda": "~1.4.3",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-3": "~6.24.1",
    "chalk": "~2.1.0",
    "cross-env": "~5.0.5",
    "enzyme": "~2.9.1",
    "gulp": "~3.9.1",
    "gulp-babel": "~7.0.0",
    "gulp-plumber": "~1.1.0",
    "gulp-typescript": "~3.2.2",
    "gulp-util": "~3.0.8",
    "jest": "~21.0.1",
    "lerna": "2.1.2",
    "ramda": "~0.24.1",
    "react": "~15.6.1",
    "react-addons-test-utils": "~15.6.0",
    "react-dom": "~15.6.1",
    "react-redux": "~5.0.6",
    "redux": "~3.7.2",
    "rimraf": "~2.6.1",
    "through2": "~2.0.3",
    "ts-loader": "~2.3.6",
    "tslint": "~5.7.0",
    "tslint-react": "~3.2.0",
    "typescript": "~2.5.2",
    "webpack": "~3.5.6"
  }
}

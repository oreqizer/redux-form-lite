{
  "private": true,
  "scripts": {
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run tslint",
    "tslint": "tslint -e '**/lib/**' 'packages/**/*.{ts,tsx}'",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "build:lib": "gulp",
    "build:umd": "webpack",
    "build:umd:min": "cross-env NODE_ENV=production webpack",
    "clean": "npm run clean:deps && npm run clean:build",
    "clean:build": "rm -rf packages/*/lib",
    "clean:deps": "rm -rf node_modules packages/*/node_modules",
    "bootstrap": "npm run clean && yarn && lerna bootstrap && npm run build:lib",
    "release": "npm run clean:build && npm run build && npm test && npm run lint && lerna publish"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      ".tsx?": "<rootDir>/jest-preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/redux-forms.git"
  },
  "author": "oreqizer",
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "~2.7.8",
    "@types/jest": "~19.2.2",
    "@types/prop-types": "^15.5.1",
    "@types/ramda": "0.0.6",
    "@types/react-redux": "~4.4.38",
    "@types/redux": "~3.6.0",
    "babel-cli": "~6.24.1",
    "babel-jest": "~19.0.0",
    "babel-loader": "~6.4.1",
    "babel-plugin-ramda": "~1.2.0",
    "babel-preset-es2015": "~6.24.1",
    "babel-preset-react": "~6.24.1",
    "babel-preset-stage-3": "~6.24.1",
    "chalk": "~1.1.3",
    "cross-env": "~4.0.0",
    "enzyme": "~2.8.2",
    "gulp": "~3.9.1",
    "gulp-babel": "~6.1.2",
    "gulp-plumber": "~1.1.0",
    "gulp-typescript": "~3.1.6",
    "gulp-util": "~3.0.8",
    "jest": "~19.0.2",
    "lerna": "2.0.0-rc.2",
    "ramda": "~0.23.0",
    "react": "~15.5.4",
    "react-addons-test-utils": "~15.5.1",
    "react-dom": "~15.5.4",
    "react-redux": "~5.0.4",
    "redux": "~3.6.0",
    "rimraf": "~2.6.1",
    "through2": "~2.0.3",
    "ts-loader": "~2.0.3",
    "tslint": "~5.1.0",
    "tslint-react": "~2.5.0",
    "typescript": "~2.1.6",
    "webpack": "~2.4.1"
  }
}

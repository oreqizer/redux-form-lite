{
  "name": "redux-forms",
  "version": "0.2.1",
  "description": "A simple form management for Redux & React.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --verbose --no-cache",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "npm run tslint && npm run eslint",
    "eslint": "eslint src/ --ext .ts,.tsx",
    "tslint": "tslint src/**.{ts,tsx}",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min && npm run dts",
    "build:lib": "tsc && babel lib --out-dir lib",
    "build:umd": "webpack src/index.ts dist/redux-forms.js",
    "build:umd:min": "NODE_ENV=production webpack src/index.ts dist/redux-forms.min.js",
    "build:examples": "webpack examples/index.jsx examples/bundle.js --config examples/webpack.config.js",
    "dts": "dts-bundle --configJson dts-bundle.json && rimraf dist/lib",
    "docs": "typedoc --out docs/ --mode modules src/",
    "clean": "rimraf lib dist",
    "prepublish": "npm run clean && npm test && npm run build"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "scriptPreprocessor": "<rootDir>/jest-preprocessor.js",
    "testRegex": "/__tests__/.*\\.spec\\.(ts|tsx)$"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oreqizer/redux-forms.git"
  },
  "keywords": [
    "form",
    "forms",
    "redux",
    "react"
  ],
  "author": "oreqizer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oreqizer/redux-forms/issues"
  },
  "homepage": "https://github.com/oreqizer/redux-forms#readme",
  "devDependencies": {
    "@types/enzyme": "^2.4.36",
    "@types/invariant": "^2.2.28",
    "@types/jest": "^15.1.32",
    "@types/ramda": "0.0.2",
    "@types/react-redux": "^4.4.35",
    "@types/redux": "^3.6.0",
    "babel-cli": "^6.16.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-3": "^6.17.0",
    "dts-bundle": "^0.6.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.0",
    "jest": "^16.0.1",
    "react-addons-test-utils": "^15.3.2",
    "react-dom": "^15.3.2",
    "rimraf": "^2.5.4",
    "semver": "^5.3.0",
    "ts-loader": "^0.9.0",
    "tslint": "^3.15.1",
    "tslint-react": "^1.0.0",
    "typedoc": "^0.5.0",
    "typescript": "^2.0.3",
    "typescript-eslint-parser": "^0.4.0",
    "webpack": "^2.1.0-beta.25"
  },
  "peerDependencies": {
    "react": "^15.3.1",
    "react-redux": "^4.4.6",
    "redux": "^3.6.0"
  },
  "dependencies": {
    "invariant": "^2.2.1",
    "ramda": "^0.22.1"
  },
  "files": [
    "dist",
    "lib",
    "README.md",
    "LICENSE"
  ]
}
